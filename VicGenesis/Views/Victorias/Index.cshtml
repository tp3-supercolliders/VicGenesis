@model IEnumerable<VicGenesis.Victoria>

@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/modernizr")


    <title></title>
    <meta charset="utf-8" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" type="text/css" href="DataTables/datatables.min.css" />

    <script type="text/javascript" src="~/Scripts/DataTables/datatables.min.js"></script>

    <style type="text/css">
        html, body {
            width: 100%;
            height: 100%;
        }


        .bg {
            display: table;
            width: 100%;
            height: 100%;
            padding: 100px 0;
            text-align: center;
            color: #fff;
            background: url(http://www.xiandanke.cn/Image/intro-bg.jpg) no-repeat bottom center;
            background-color: #000;
            background-size: cover;
        }

        .my-navbar {
            padding: 20px 0;
            transition: background 0.5s ease-in-out, padding 0.5s ease-in-out;
        }

            .my-navbar a {
                background: transparent !important;
                color: #fff !important
            }

                .my-navbar a:hover {
                    color: #45bcf9 !important;
                    background: transparent;
                    outline: 0
                }

            .my-navbar a {
                transition: color 0.5s ease-in-out;
            }


        .top-nav {
            padding: 0;
            background: #000;
        }

        button.navbar-toggle {
            background-color: #00FFFF;
        }


            button.navbar-toggle > span.icon-bar {
                background-color: #00FFFF
            }
    </style>

</head>
<body>

    <div>
        <img src="~/assets/images/explore/e3.jpg" height="500" width="1600" />
    </div>

    <nav class="navbar navbar-fixed-top my-navbar" role="navigation" style="font-size:24px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Go back to homepage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

        </div>

    </nav>
    <script>$(window).scroll(function () { if ($(".navbar").offset().top > 50) { $(".navbar-fixed-top").addClass("top-nav"); } else { $(".navbar-fixed-top").removeClass("top-nav"); } })</script>

    <div align="center">
        <h2>All the regional areas are shown below</h2>
        <h4>Which one would you like to see more?</h4>

        <div style="overflow:scroll; max-height:500px;">
            <table id="vicTable" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Community Name</th>
                        <th>Local Government Area</th>
                        <th>Location</th>
                        <th>Area (km sq)</th>
                        <th>Population Density</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.Community_Type == "Town")
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Community_Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Local_Government_Area)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Area_km_sq)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Population_density)
                                </td>

                                <td>
                                    @Html.ActionLink("Show More", "Details", new { id = item.COMM_CODE })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    

    <button type="button" class="btn btn-default  btn-sm">

        @Html.ActionLink("Back to Homepage", "Index", "Home")
    </button>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Produced by SuperColliders</p>
        </footer>
    </div>

    <script>
        $(document).ready(function () {
            $('#vicTable').DataTable({
                "sDom": '<"nav"lf>t<"nav"i>',
                "language": {
                    "search": "Search (using any keyword) :"
                }
            });
        });
    </script>
</body>
</html>